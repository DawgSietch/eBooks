<script>
  let slides; // Declare slides globally but initialize inside DOMContentLoaded
  let current = 0;
  let isAnimating = false;
  let isFlipbookAnimating = false; // New flag for flipbook animation

  // Detect which animation end event to use for cross-browser compatibility
  const animEndEventNames = {
    'WebkitAnimation' : 'webkitAnimationEnd',
    'OAnimation' : 'oAnimationEnd',
    'msAnimation' : 'MSAnimationEnd',
    'animation' : 'animationend'
  };
  const animEndEventName = animEndEventNames[ (function() {
    for (const name in animEndEventNames) {
      if (typeof document.documentElement.style[name] !== 'undefined') {
        return name;
      }
    }
    return ''; // Fallback if no animation support
  })() ];

  function updatePageCounter() {
    const counter = document.getElementById('page-counter');
    if (counter && slides && slides.length > 0) { // Add checks for slides existence
      counter.textContent = `${current + 1} / ${slides.length}`;
    } else if (counter) {
      counter.textContent = "0 / 0"; // Or some other default if slides are not loaded
    }
  }

  function updateNavLinkHighlight() {
    const navLinks = document.querySelectorAll('.top-nav a[data-nav-section]');
    navLinks.forEach(link => link.classList.remove('nav-link-active'));

    let activeSection = '';

    // Define slide ranges for each navigation section (adjusted for removed slide)
    if (current >= 2 && current <= 5) { // Slides 2-5 for "The Payments Industry"
      activeSection = 'payments-industry';
    } else if (current >= 6 && current <= 14) { // Slides 6-14 for "One Click Stay" (including testimonials)
      activeSection = 'one-click-stay';
    } else if (current >= 15 && current <= 17) { // Slides 15-17 for "How We Achieve Success"
      activeSection = 'how-we-achieve-success';
    } else if (current >= 18 && current <= 19) { // Slides 18-19 for "Talk to Us"
      activeSection = 'talk-to-us';
    }

    if (activeSection) {
      const activeLink = document.querySelector(`.top-nav a[data-nav-section="${activeSection}"]`);
      if (activeLink) {
        activeLink.classList.add('nav-link-active');
      }
    }
  }

  function showSlide(index, direction = 'next') {
    if (isAnimating || index === current || !slides || slides.length === 0) {
      return;
    }

    isAnimating = true;

    const oldSlide = slides[current];
    const newSlide = slides[index];

    if (!oldSlide || !newSlide) {
      console.error("Slide element not found during transition. Old Slide:", oldSlide, "New Slide:", newSlide);
      isAnimating = false;
      return;
    }

    // Prepare new slide: make it visible and set initial transform for entry animation
    newSlide.style.visibility = 'visible';
    newSlide.classList.add('pt-page-ontop'); // Ensure new slide is on top during transition
    newSlide.classList.add('pt-page-current'); // Add current class to new slide immediately

    if (direction === 'next') {
      newSlide.classList.add('pt-page-moveFromRight');
      oldSlide.classList.add('pt-page-exit-left');
    } else {
      newSlide.classList.add('pt-page-moveFromLeft');
      oldSlide.classList.add('pt-page-exit-right');
    }

    // Remove current class from old slide immediately
    oldSlide.classList.remove('pt-page-current');

    // Listen for animation end on the NEW slide to clean up classes from BOTH slides
    // This ensures the new slide is fully in place before the old one is hidden.
    newSlide.addEventListener(animEndEventName, function handleNewSlideAnimationEnd() {
      newSlide.removeEventListener(animEndEventName, handleNewSlideAnimationEnd);

      // Clean up old slide
      oldSlide.classList.remove('pt-page-exit-left', 'pt-page-exit-right');
      oldSlide.style.visibility = 'hidden'; // Hide it completely

      // Clean up new slide's temporary animation classes
      newSlide.classList.remove('pt-page-moveFromRight', 'pt-page-moveFromLeft', 'pt-page-ontop');

      isAnimating = false; // Animation finished
    });

    current = index;
    updatePageCounter();
    updateNavLinkHighlight(); // Call to update nav link highlight
  }

  function nextArrow() {
    let nextIndex = current + 1;
    if (nextIndex >= slides.length) {
      nextIndex = 0; // Loop back to the first slide
    }
    showSlide(nextIndex, 'next');
  }

  function prevArrow() {
    let prevIndex = current - 1;
    if (prevIndex < 0) {
      prevIndex = slides.length - 1; // Loop to the last slide
    }
    showSlide(prevIndex, 'prev');
  }

  function goToSlide(index) {
    const direction = index > current ? 'next' : 'prev';
    showSlide(index, direction);
  }

  function unlockContent() {
    console.log("unlockContent called");
    document.getElementById('unlock').style.display = 'none'; // Hide unlock screen

    const ptPages = document.querySelector('.pt-pages');
    const topNav = document.querySelector('.top-nav');
    const navButtons = document.querySelectorAll('.nav-button');
    const pageCounter = document.getElementById('page-counter');

    console.log("Elements selected:", { ptPages, topNav, navButtons, pageCounter });

    if (ptPages) ptPages.classList.add('active');
    if (topNav) {
      topNav.classList.add('visible');
      console.log("topNav classList after adding visible:", topNav.classList);
    }
    navButtons.forEach(btn => {
      if (btn) btn.classList.add('visible');
    });
    if (pageCounter) pageCounter.classList.add('visible');

    // Set a flag in localStorage to remember that the content has been unlocked
    localStorage.setItem('ebookUnlocked', 'true');

    // Ensure the first slide is correctly visible and active after unlock
    if (slides.length > 0) {
      slides[0].classList.add('pt-page-current');
      slides[0].style.visibility = 'visible';
    } else {
      console.error("No slides found to display after unlock.");
    }
    current = 0; // Reset current to 0 after unlock
    updatePageCounter();
    updateNavLinkHighlight(); // Call to update nav link highlight
  }

  // Variables for internal flipbook
  let currentFlipbookPage = 1;
  const totalFlipbookPages = 11; // Updated to 11 pages

  // Function to handle internal flipbook navigation
  function showFlipbookPage(pageNumber) {
    const flipbookPages = document.querySelectorAll('.flipbook-page');
    const pageDots = document.querySelectorAll('.flipbook-nav .page-dot');

    if (pageNumber === currentFlipbookPage || isFlipbookAnimating) {
        return;
    }

    isFlipbookAnimating = true;

    const oldFlipbookPage = document.getElementById(`flipbook-page-${currentFlipbookPage}`);
    const newFlipbookPage = document.getElementById(`flipbook-page-${pageNumber}`);

    if (!oldFlipbookPage || !newFlipbookPage) {
        console.error("Flipbook page element not found during transition.");
        isFlipbookAnimating = false;
        return;
    }

    // Update dot styling
    pageDots.forEach(dot => dot.classList.remove('active-dot'));
    if (pageNumber - 1 < pageDots.length) { // Check if dot exists
        pageDots[pageNumber - 1].classList.add('active-dot');
    }


    const animationDuration = 700; // 0.7 seconds, matches CSS transition

    // Set transitions for both pages (if not already set)
    flipbookPages.forEach(page => {
        page.style.transition = `transform ${animationDuration / 1000}s ease-in-out`;
    });

    // Immediately set new page to visible and position it for entry
    newFlipbookPage.style.visibility = 'visible';
    newFlipbookPage.style.zIndex = '1'; // Bring new page to front

    if (pageNumber > currentFlipbookPage) { // Moving next (right to left)
        newFlipbookPage.style.transform = 'translateX(100%)'; // Start off-screen right
        // Force reflow before animating
        void newFlipbookPage.offsetWidth;
        newFlipbookPage.style.transform = 'translateX(0%)'; // Animate to on-screen
        oldFlipbookPage.style.transform = 'translateX(-100%)'; // Animate old page off-screen left
    } else { // Moving previous (left to right)
        newFlipbookPage.style.transform = 'translateX(-100%)'; // Start off-screen left
        // Force reflow before animating
        void oldFlipbookPage.offsetWidth; // Use oldFlipbookPage for reflow if it's the one moving
        oldFlipbookPage.style.transform = 'translateX(100%)'; // Animate old page off-screen right
        newFlipbookPage.style.transform = 'translateX(0%)'; // Animate to on-screen
    }

    // After animation completes, clean up
    setTimeout(() => {
        oldFlipbookPage.style.visibility = 'hidden';
        oldFlipbookPage.style.zIndex = '0';
        oldFlipbookPage.style.transform = 'translateX(0%)'; // Reset old page position for next use
        oldFlipbookPage.style.transition = 'none'; // Remove transition for reset

        newFlipbookPage.style.transition = 'none'; // Remove transition for new page resting state

        isFlipbookAnimating = false;
    }, animationDuration);

    currentFlipbookPage = pageNumber;
  }


  document.addEventListener('DOMContentLoaded', () => {
    // Initialize slides here to ensure DOM is loaded
    slides = document.querySelectorAll('.pt-page');

    // Check if the ebook was already unlocked in a previous session
    if (localStorage.getItem('ebookUnlocked') === 'true') {
        unlockContent(); // Automatically unlock if the flag is set
    }

    // Make these functions globally accessible as they are called from inline HTML attributes
    window.unlockContent = unlockContent;
    window.nextArrow = nextArrow;
    window.prevArrow = prevArrow;
    window.goToSlide = goToSlide;
    window.showFlipbookPage = showFlipbookPage; // Make flipbook function global too
    window.closeBenefitOverlay = closeBenefitOverlay; // Make close overlay function global

    // Add keyboard navigation
    document.addEventListener('keydown', (event) => {
      // Only allow keyboard navigation if the unlock screen is hidden
      if (document.getElementById('unlock').style.display === 'none') {
        if (event.key === 'ArrowRight') {
          // Check if the current slide is the one with the flipbook (Slide 11, index 10)
          if (current === 10) {
            let nextFlipbookPage = currentFlipbookPage + 1;
            if (nextFlipbookPage > totalFlipbookPages) {
              nextFlipbookPage = 1; // Loop back to the first flipbook page
            }
            showFlipbookPage(nextFlipbookPage);
          } else {
            nextArrow();
          }
        } else if (event.key === 'ArrowLeft') {
          // Check if the current slide is the one with the flipbook (Slide 11, index 10)
          if (current === 10) {
            let prevFlipbookPage = currentFlipbookPage - 1;
            if (prevFlipbookPage < 1) {
              prevFlipbookPage = totalFlipbookPages; // Loop to the last flipbook page
            }
            showFlipbookPage(prevFlipbookPage);
          } else {
            prevArrow();
          }
        }
      }
    });

    // Event listener for the new Key Benefits dropdowns (now using an overlay)
    const benefitHeaders = document.querySelectorAll('.benefit-header');
    const overlayContent = document.querySelector('.benefit-overlay-content');
    const overlayTitle = document.getElementById('overlay-title');
    const overlayText = document.getElementById('overlay-text');
    const closeButton = document.querySelector('.benefit-overlay-content .close-button');

    benefitHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const benefitItem = header.closest('.benefit-item');
        const title = header.querySelector('.benefit-title').textContent;
        const content = benefitItem.querySelector('.benefit-content-hidden').innerHTML;
        const headerBgColor = window.getComputedStyle(header).backgroundColor;

        // Set overlay content and style
        overlayTitle.textContent = title;
        overlayText.innerHTML = content;
        overlayContent.style.backgroundColor = headerBgColor; // Match header color

        // Activate overlay
        overlayContent.classList.add('active');
      });
    });

    function closeBenefitOverlay() {
      overlayContent.classList.remove('active');
    }

    closeButton.addEventListener('click', closeBenefitOverlay);

    // Initial update of the page counter when the script loads
    updatePageCounter();
    updateNavLinkHighlight(); // Call to update nav link highlight on initial load
    // Ensure initial flipbook page is shown if applicable
    showFlipbookPage(1);
  });
</script>
</body>
</html>
